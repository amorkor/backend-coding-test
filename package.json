{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "mocha --delay --exit tests",
    "test:load": "npm-run-all --parallel start:forever load",
    "start": "node index.js",
    "start:ts": "tsc && node dist/index.js",
    "start:forever": "forever start index.js",
    "dev": "npx nodemon index.js",
    "coverage": "npx nyc npm run test",
    "lint": "npx eslint . --ext js",
    "load": "artillery run tests/load/config.yaml && forever stopall"
  },
  "pre-push": [
    "lint",
    "coverage"
  ],
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "redoc-express": "^1.0.0",
    "sqlite3": "^4.0.6",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "artillery": "^1.6.1",
    "chai": "^4.3.6",
    "eslint": "^6.0.0",
    "forever": "^4.0.3",
    "mocha": "^6.1.4",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2",
    "typescript": "^4.5.5"
  }
}
