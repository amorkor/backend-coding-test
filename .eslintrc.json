{
  "env": {
    "node": true,
    "commonjs": true,
    "mocha": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "rules": {
    "arrow-parens": 2,
    "comma-dangle": [2, "always-multiline"],
    "eol-last": 2,
    "indent": [2, 4],
    "keyword-spacing": 2,
    "linebreak-style": [2, "unix"],
    "no-trailing-spaces": 2,
    "quotes": [2, "single"],
    "semi": 2,
    "semi-spacing": 2
  }
}
